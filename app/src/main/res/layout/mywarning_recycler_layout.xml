<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50sp"
    android:layout_marginBottom="2sp"
    android:id="@+id/mywarning_items"
    >

    <TextView
        android:id="@+id/mywarning_area"
        android:layout_width="150sp"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:textAlignment="textStart"
        android:padding="3sp"
        android:layout_alignParentStart="true"
        android:text="Area"
        tools:ignore="RtlCompat" />


    <TextView
        android:id="@+id/mywarning_type"
        android:layout_width="75sp"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/mywarning_level"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="All" />

    <ImageButton
        android:id="@+id/edit_mywarning_btn"
        android:layout_width="75sp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:src="@drawable/right_arrow" />

    <ImageView
        android:id="@+id/mywarning_level"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/mywarning_area"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:padding="3sp"
        android:src="@drawable/weather_icon" />


</RelativeLayout>